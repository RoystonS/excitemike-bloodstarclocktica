<Window x:Class="BloodstarClockticaWpf.BcMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BloodstarClockticaWpf"
        mc:Ignorable="d"
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" 
        Style="{StaticResource WindowStyle}" SizeToContent="Height">
    <StackPanel>
        <Grid>
            <Button Style="{StaticResource BcCloseButton}" HorizontalAlignment="Right" Click="Close_Click"/>
            <TextBlock x:Name="TitleLabel" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
        <TextBox Grid.Row="0" x:Name="Message" 
                    Text="Message" 
                    Margin="6" 
                    Background="Transparent"
                    BorderThickness="0"
                    IsReadOnly="True"
                    TextWrapping="Wrap"/>
        <Button Grid.Row="2" Content="_OK" Click="Ok_Click" Margin="6,0,3,6" Height="50" IsDefault="True"/>
    </StackPanel>
</Window>
