{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "builddev",
			"group": "build",
			"label": "build development",
			"detail": "webpack for development mode",
			"problemMatcher": []
		},
		{
			"type": "npm",
			"script": "buildprod",
			"group": "build",
			"label": "build production",
			"detail": "webpack for production",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"group": "build",
			"label": "clean dist",
			"detail": "clear generated files out of dist",
			"command":"del \"dist/*.js\" ; del \"dist/*.js.LICENSE.txt\" ; del \"dist/*.html\" ; del \"dist/*.css\"",
			"problemMatcher": []
		},
		{
			"type": "npm",
			"script": "watch",
			"group": "build",
			"label": "watch",
			"isBackground": true,
			"detail": "autobuild when files change"
		},
		{
			"type": "npm",
			"script": "serve",
			"group": "build",
			"label": "serve",
			"detail": "open browser to site with auto-reload when there are changes",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"type":"eslint",
			"group": "build",
			"label": "lint",
			"detail": "lint project using eslint"
		},
		{
			"type":"shell",
			"group": "build",
			"label": "lint with autofix",
			"detail": "autofix eslint issues",
			"command": "node_modules/.bin/eslint . --fix",
			"problemMatcher": "$eslint-stylish"
		}
	]
}